FROM fedora:35
LABEL maintainer=henri@nagstamon.de

RUN dnf -y install createrepo_c \
                   desktop-file-utils \
                   git \
                   python3 \
                   python3-beautifulsoup4 \
                   python3-cryptography \
                   python3-dateutil \
                   python3-devel \
                   python3-keyring \
                   python3-lxml \
                   python3-psutil \
                   python3-qt5 \
                   python3-qt5-devel \
                   python3-requests \
                   python3-requests-kerberos \
                   python3-SecretStorage \
                   qt5-qtsvg \
                   qt5-qtmultimedia \
                   rpm-build

# ugly workaround for legacy Qt5 on Fedora < 36
CMD cd /nagstamon/build && \
    sed -i s/pyqt6/pyqt5/g redhat/nagstamon.spec && \
    sed -i s/qt6/qt5/g redhat/nagstamon.spec && \
    /usr/bin/python3 build.py
